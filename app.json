{
  "name": "poke-admin",
  "stack": "container",
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "env": {
    "DATABASE_URL": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "JWT_SECRET": {
      "generator": "secret"
    },
    "SESSION_SECRET": {
      "generator": "secret"
    },
    "SESSION_EXPIRY": {
      "value": "28800000"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  }
}
